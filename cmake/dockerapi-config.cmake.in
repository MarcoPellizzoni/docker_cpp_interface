#[[ 
   MANDATORY MACRO. It is substituted cmake scripts when this file is passed to the configure_package_config_file()
]]
@PACKAGE_INIT@

#[[
   Include the cmake script generated with the install TARGETS EXPORT 
]]
include(${CMAKE_CURRENT_LIST_DIR}/dockerapi-targets.cmake)

#[[
   For good practice check the required component that the user need to have. 
   This is usefull when the target is made of a set of components
]]
check_required_components(dockerapi)

#[[
   Optional: set variables to be use by other projects
   When this file is passed to the configure_package_config_file() the @PACKAGE_INCLUDE_DIR@ will be substituted 
   with the value of INCLUDE_DIR variable that was passed as argument to the configure_package_config_file() with the
   keyword PATH_VARS.
]]
set_and_check(dockerapi_INCLUDE_DIR "@PACKAGE_CMAKE_INSTALL_INCLUDEDIR@")
set_and_check(dockerapi_LIB_DIR "@PACKAGE_CMAKE_INSTALL_LIBDIR@")

if(WIN32)
	set_and_check(dockerapi_BIN_DIR "@PACKAGE_CMAKE_INSTALL_BINDIR@")
endif()

